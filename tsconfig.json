{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "stripInternal": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}